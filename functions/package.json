{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "serve:dev": "NODE_ENV=development firebase emulators:start --only functions --project=dev",
    "serve:prod": "NODE_ENV=production firebase emulators:start --only functions --project=prod",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:dev": "NODE_ENV=development firebase deploy --only functions --project=dev",
    "deploy:prod": "NODE_ENV=production firebase deploy --only functions --project=prod",
    "logs": "firebase functions:log",
    "logs:dev": "firebase functions:log --project=dev",
    "logs:prod": "firebase functions:log --project=prod"
  },
  "engines": {
    "node": "18"
  },
  "main": "index.js",
  "dependencies": {
    "firebase-admin": "^13.2.0",
    "firebase-functions": "^6.3.2"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.4.0"
  },
  "private": true
}
